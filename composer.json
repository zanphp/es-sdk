{
    "name": "yz-elasticsearch",
    "description": "PHP No Blocking Client for Elasticsearch",
    "keywords": [
        "search",
        "client",
        "yz-elasticsearch"
    ],
    "type": "library",
    "license": "Apache 2",
    "authors": [
        {
            "name": "Zachary Tong"
        }
    ],
    "require": {
        "php": ">=5.3.9",
        "monolog/monolog": "~1.7",
        "pimple/pimple": "~1.1",
        "guzzle/guzzle": "~3.8",
        "psr/log": "~1.0",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "mockery/mockery": "dev-master@dev",
        "athletic/athletic": "~0.1",
        "symfony/yaml": "2.4.*@dev",
        "satooshi/php-coveralls": "dev-master",
        "mikey179/vfsStream": "~1.2"
    },
    "autoload": {
        "psr-0": {
            "Elasticsearch": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "Elasticsearch\\Tests": "tests/",
            "Elasticsearch\\Benchmarks": "benchmarks/"
        }
    }
}
